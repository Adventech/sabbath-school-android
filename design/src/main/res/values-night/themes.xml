<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Platform.V24.Theme.SS" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@color/black_40</item>
    </style>

    <style name="Theme.SS" parent="Base.Theme.SS">
        <item name="colorPrimary">@color/ss_green</item>
        <item name="colorPrimaryVariant">@color/ss_green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/ss_pink</item>
        <item name="colorSecondaryVariant">@color/ss_pink_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorError">@color/ss_red_300</item>
        <item name="colorOnError">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="ThemeOverlay.SS.BottomSheetDialog" parent="Base.ThemeOverlay.SS.BottomSheetDialog">
        <item name="colorPrimary">@color/ss_green</item>
        <item name="colorPrimaryVariant">@color/ss_green_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/ss_pink</item>
        <item name="colorSecondaryVariant">@color/ss_pink_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:colorBackground">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
    </style>

    <style name="ThemeOverlay.SS.MaterialAlertDialog" parent="Base.ThemeOverlay.SS.MaterialAlertDialog">
        <item name="colorSecondary">@color/ss_pink</item>
    </style>

</resources>
