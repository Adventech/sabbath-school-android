<resources>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="popupMenuStyle">@style/Widget.SS.PopupMenuStyle</item>
    </style>

    <style name="AppThemeAppBarTextStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="AppThemeAppBarTextStyleExpanded" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:fontFamily">@font/lato_bold</item>
    </style>

    <style name="Theme.SS.Lessons" parent="Theme.SS.Full">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="display_options_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/ss_reading_display_options_button_padding</item>
        <item name="android:paddingBottom">@dimen/ss_reading_display_options_button_padding</item>
        <item name="android:paddingStart">@dimen/spacing_micro</item>
        <item name="android:paddingEnd">@dimen/spacing_micro</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/selector_primary_variant</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>
</resources>
