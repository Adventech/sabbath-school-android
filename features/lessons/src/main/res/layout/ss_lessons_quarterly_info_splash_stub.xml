<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ss_quarterly_splash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/blank"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="?attr/colorPrimary" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <View
        android:id="@+id/ss_quarterly_splash_gradient"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideLine" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ss_lessons_app_bar_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:paddingVertical="@dimen/spacing_normal"
        android:textAppearance="?attr/textAppearanceHeadline5"
        android:textColor="@color/white"
        android:textSize="@dimen/ss_quarterly_item_featured_title_text_size"
        app:fontFamily="@font/lato_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideLine"
        tools:text="Rest In Christ" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ss_lessons_app_bar_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="@dimen/spacing_medium"
        android:textAllCaps="true"
        android:textColor="@color/white_70"
        android:textSize="@dimen/ss_lessons_toolbar_date_text_size"
        app:fontFamily="@font/lato_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ss_lessons_app_bar_title"
        tools:text="October - November - December" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/ss_lessons_app_bar_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/spacing_medium"
        android:minWidth="@dimen/ss_lessons_toolbar_read_min_width"
        android:text="@string/ss_lessons_read"
        app:cornerRadius="@dimen/ss_lessons_toolbar_read_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ss_lessons_app_bar_date" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ss_lessons_app_bar_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:maxLines="3"
        android:padding="@dimen/spacing_medium"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ss_lessons_toolbar_description_text_size"
        app:fontFamily="@font/lato_medium"
        app:layout_constraintBottom_toTopOf="@id/quarterly_features_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ss_lessons_app_bar_read"
        tools:text="@tools:sample/lorem/random" />

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/quarterly_features_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ss_lessons_app_bar_description"
        tools:background="#fafa"
        tools:layout_height="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>