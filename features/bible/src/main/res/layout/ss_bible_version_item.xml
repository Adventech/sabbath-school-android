<layout
        xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/ss_bible_version_item_min_width"
            android:orientation="vertical"
            >

        <TextView
                android:id="@android:id/text1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ss_bible_version_item_height"
                android:drawablePadding="@dimen/ss_bible_version_item_drawable_padding"
                android:gravity="center_vertical|start"
                android:paddingStart="@dimen/ss_bible_version_item_side_padding"
                android:paddingLeft="@dimen/ss_bible_version_item_side_padding"
                android:paddingEnd="@dimen/ss_bible_version_item_side_padding"
                android:paddingRight="@dimen/ss_bible_version_item_side_padding"
                android:textColor="@color/ss_color_secondary_dark"
                android:textSize="@dimen/ss_bible_version_item_text_size"
                />

    </LinearLayout>
</layout>
