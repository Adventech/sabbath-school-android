<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/widget_lesson_cover"
        android:layout_width="@dimen/ss_widget_book_cover_width"
        android:layout_height="@dimen/ss_widget_book_cover_height"
        android:layout_margin="@dimen/spacing_medium"
        android:contentDescription="@string/blank"
        android:src="@drawable/bg_img_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widget_quarterly_title"
            style="@style/AppWidget.Text.Primary"
            tools:text="Rest in Christ" />

        <TextView
            android:id="@+id/widget_lesson_title"
            style="@style/AppWidget.Text.Secondary"
            android:layout_marginTop="@dimen/spacing_normal"
            tools:text="Living in a 24-7 Society" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:contentDescription="@string/blank"
        android:scaleType="centerInside"
        android:src="@drawable/ic_widget_logo"
        android:translationY="-18dp" />

</LinearLayout>