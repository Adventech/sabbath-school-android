<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="progressVisibility" type="int"/>
        <variable name="progressLabel" type="String"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="@{progressVisibility}">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ss_quarterlies_loading"
            android:text="@{progressLabel}"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/ss_quarterlies_loading"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:indeterminateBehavior="repeat"
            android:indeterminate="true"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>
    </RelativeLayout>
</layout>