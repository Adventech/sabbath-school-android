<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

        <data>
            <variable
                name="viewModel"
                type="com.cryart.sabbathschool.viewmodel.SSLessonInfoViewModel" />
        </data>

        <RelativeLayout
            android:id="@+id/itemView"
            android:layout_width="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:onClick="@{viewModel::onItemClick}"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/ss_lesson_item_normal_index"
                    android:gravity="center"
                    android:maxEms="1"
                    android:minEms="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:textSize="30sp"
                    android:textColor="#ccc"
                    android:layout_marginRight="20dp"
                    android:text="1"
                    tools:text="1" />

                <TextView
                    android:id="@+id/ss_lesson_item_normal_title"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ss_lesson_item_normal_index"
                    android:layout_toEndOf="@+id/ss_lesson_item_normal_index"
                    android:layout_alignTop="@+id/ss_lesson_item_normal_index"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="15sp"
                    android:maxLines="1"
                    android:text="@{viewModel.title}"
                    tools:text="Lesson Title" />

                <TextView
                    android:id="@+id/ss_lesson_item_normal_date"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ss_lesson_item_normal_index"
                    android:layout_toEndOf="@+id/ss_lesson_item_normal_index"
                    android:layout_alignBottom="@+id/ss_lesson_item_normal_index"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:text="@{viewModel.date}"
                    tools:text="Lesson Title" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#979797"/>
        </RelativeLayout>


</layout>