<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <data>
            <variable
                name="viewModel"
                type="com.cryart.sabbathschool.viewmodel.SSLessonItemViewModel" />
        </data>

        <RelativeLayout
            android:id="@+id/itemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/itemViewContent"
                android:onClick="@{viewModel::onItemClick}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/ss_lesson_item_normal_index"
                    android:gravity="center"
                    android:maxEms="1"
                    android:minEms="1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:maxLines="1"
                    android:textSize="26sp"
                    android:textColor="#ccc"
                    android:layout_marginRight="20dp"
                    android:text="1"
                    tools:text="1" />

                <TextView
                    android:id="@+id/ss_lesson_item_normal_title"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ss_lesson_item_normal_index"
                    android:layout_toEndOf="@+id/ss_lesson_item_normal_index"
                    android:layout_alignTop="@+id/ss_lesson_item_normal_index"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textColor="#515151"
                    android:maxLines="1"
                    android:text="@{viewModel.title}"
                    tools:text="Lesson Title" />

                <TextView
                    android:id="@+id/ss_lesson_item_normal_date"
                    android:ellipsize="end"
                    android:layout_toRightOf="@+id/ss_lesson_item_normal_index"
                    android:layout_toEndOf="@+id/ss_lesson_item_normal_index"
                    android:layout_alignBottom="@+id/ss_lesson_item_normal_index"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#969696"
                    android:textStyle="italic"
                    android:maxLines="1"
                    android:text="@{viewModel.date}"
                    tools:text="Lesson Title" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/ss_lesson_item_menu"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_alignTop="@+id/itemViewContent"
                android:layout_alignBottom="@+id/itemViewContent"
                android:layout_height="wrap_content"
                android:layout_width="64dp">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    app:iiv_color="#cccccc"
                    app:iiv_icon="gmd-more-vert" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#979797"/>
        </RelativeLayout>
</layout>