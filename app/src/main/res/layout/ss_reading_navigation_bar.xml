<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.cryart.sabbathschool.viewmodel.SSReadingViewModel" />
    </data>

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bottom_sheet_2"
        android:background="@drawable/ss_top_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/z"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/days_list"
            android:layout_toLeftOf="@+id/days_list"
            android:layout_height="wrap_content"
            android:visibility="@{viewModel.ssReadPosition > 0 ? View.VISIBLE : View.INVISIBLE}"
            android:onClick="@{()->viewModel.onPrevClick()}">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/ss_arrow_left"
                    app:iiv_color="#333333"
                    app:iiv_icon="gmd-chevron-left"
                    app:iiv_size="16dp"
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_toRightOf="@+id/ss_arrow_left"
                    android:layout_toEndOf="@+id/ss_arrow_left"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@+id/ss_arrow_left"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.ssReadPosition > 0 ? viewModel.ssLessonInfo.days.get(viewModel.ssReadPosition-1).date : null}"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.ssReadPosition > 0 ? viewModel.ssLessonInfo.days.get(viewModel.ssReadPosition-1).title : null}"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

        <com.mikepenz.iconics.view.IconicsImageView
            android:id="@+id/days_list"
            android:focusable="true"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:onClick="@{()->viewModel.onMenuClick()}"
            app:iiv_color="#333333"
            app:iiv_icon="gmd-list"
            app:iiv_size="24dp"
            android:layout_width="60dp"
            android:scaleType="centerInside"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_toEndOf="@+id/days_list"
            android:onClick="@{()->viewModel.onNextClick()}"
            android:visibility="@{viewModel.ssReadPosition &lt; (viewModel.ssLessonInfo.days.size()-1) ? View.VISIBLE : View.INVISIBLE}"
            android:layout_toRightOf="@+id/days_list">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <com.mikepenz.iconics.view.IconicsImageView
                    android:id="@+id/ss_arrow_right"
                    app:iiv_color="#333333"
                    app:iiv_icon="gmd-chevron-right"
                    app:iiv_size="16dp"
                    android:scaleType="centerInside"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="17dp"
                    android:layout_marginEnd="17dp"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_toLeftOf="@+id/ss_arrow_right"
                    android:layout_toStartOf="@+id/ss_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_centerVertical="true"
                    android:layout_alignBaseline="@+id/ss_arrow_right"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.ssReadPosition &lt; (viewModel.ssLessonInfo.days.size()-1) ? viewModel.ssLessonInfo.days.get(viewModel.ssReadPosition+1).date : null}"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{viewModel.ssReadPosition &lt; (viewModel.ssLessonInfo.days.size()-1) ? viewModel.ssLessonInfo.days.get(viewModel.ssReadPosition+1).title : null}"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="12sp"
                        android:ellipsize="end"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>
    </RelativeLayout>
</layout>