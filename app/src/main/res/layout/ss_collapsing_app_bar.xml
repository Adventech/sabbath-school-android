<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="appBarVisibility" type="int"/>
        <variable name="cover" type="String"/>
        <variable name="description" type="String"/>
        <variable name="date" type="String"/>
    </data>

    <android.support.design.widget.AppBarLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:expanded="true"
        android:id="@+id/ss_app_bar_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:visibility="@{appBarVisibility}"
        app:elevation="@dimen/ss_app_bar_default_elevation">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ss_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|enterAlways"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="30dp"
            app:expandedTitleMarginTop="60dp"
            app:expandedTitleGravity="top">

            <RelativeLayout
                android:id="@+id/lesson_descr"
                android:layout_width="match_parent"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="110dp"
                android:layout_marginBottom="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@{date}"
                    android:id="@+id/date"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:transitionName="featuredCover"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="20dp"
                    android:id="@+id/ss_quarterly_item_normal_cover"
                    android:layout_width="@dimen/ss_quarterly_item_featured_cover_width"
                    android:layout_height="@dimen/ss_quarterly_item_featured_cover_height"
                    android:background="@android:drawable/dialog_holo_light_frame"
                    android:padding="@dimen/ss_quarterly_item_featured_cover_padding"
                    app:coverUrl="@{cover}" />

                <TextView
                    android:text="@{description}"
                    android:id="@+id/description"
                    android:layout_below="@+id/date"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/ss_quarterly_item_normal_cover"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="40dp"
                    android:maxLines="9"
                    android:ellipsize="end"
                    android:textColor="#c2ffffff"
                    android:typeface="serif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <mehdi.sakout.fancybuttons.FancyButton
                    android:layout_below="@+id/description"
                    android:id="@+id/ss_quarterly_featured_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="0dp"
                    android:layout_toRightOf="@+id/ss_quarterly_item_normal_cover"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"

                    android:minWidth="@dimen/ss_quarterly_item_featured_read_min_width"
                    fancy:fb_textFont="Roboto-Bold.ttf"
                    fancy:fb_borderWidth="@dimen/ss_quarterly_item_featured_read_border_width"
                    fancy:fb_defaultColor="@color/ss_quarterly_item_featured_read_default_color"
                    fancy:fb_focusColor="@color/ss_quarterly_item_featured_read_focus_color"
                    fancy:fb_radius="@dimen/ss_quarterly_item_featured_read_radius"
                    fancy:fb_text="Read"
                    fancy:fb_textColor="@color/ss_quarterly_item_featured_read_text_color"
                     />
            </RelativeLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/ss_toolbar2"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
</layout>