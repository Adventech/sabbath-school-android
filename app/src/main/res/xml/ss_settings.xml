<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Reading Display Options">
        <com.cryart.sabbathschool.misc.SSListPreferenceCompat
            android:key="ss_settings_display_options_theme"
            android:title="Color theme"
            android:summary="%s"
            android:defaultValue="light"
            android:entries="@array/ss_settings_display_options_theme_entries"
            android:entryValues="@array/ss_settings_display_options_theme_values" />

        <com.cryart.sabbathschool.misc.SSListPreferenceCompat
            android:key="ss_settings_display_options_font"
            android:title="Typeface"
            android:summary="%s"
            android:defaultValue="andada"
            android:entries="@array/ss_settings_display_options_font_entries"
            android:entryValues="@array/ss_settings_display_options_font_values" />

        <com.cryart.sabbathschool.misc.SSListPreferenceCompat
            android:key="ss_settings_display_options_size"
            android:title="Font size"
            android:summary="%s"
            android:defaultValue="medium"
            android:entries="@array/ss_settings_display_options_size_entries"
            android:entryValues="@array/ss_settings_display_options_size_values" />
    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:title="Website"
            android:summary="http://adventech.io"
            android:persistent="false"
            android:selectable="true">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://adventech.io" />
        </Preference>

        <Preference
            android:title="Facebook Page"
            android:summary="https://facebook.com/shabbathschool"
            android:persistent="false"
            android:selectable="true">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://facebook.com/shabbathschool" />
        </Preference>

        <Preference
            android:title="Instagram"
            android:summary="\@adventech"
            android:persistent="false"
            android:selectable="true">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://instagram.com/adventech" />
        </Preference>

        <Preference
            android:title="Source Code"
            android:summary="Help the project :)"
            android:persistent="false"
            android:selectable="true">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Adventech/sabbath-school-android-2" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>