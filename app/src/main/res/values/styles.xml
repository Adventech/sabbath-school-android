<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SS.TextAppearance.HeadLine5" parent="@style/TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="SS.TextAppearance.HeadLine6" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="SS.TextAppearance.Body1" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="SS.TextAppearance.Body2" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="SS.TextAppearance.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="Theme.SS.AlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarStyle">@style/AlertDialog.ButtonBar</item>
        <item name="dialogCornerRadius">@dimen/dialog_corner_radius</item>
        <item name="dialogPreferredPadding">@dimen/dialogPreferredPadding</item>
        <item name="materialAlertDialogTitleTextStyle">@style/AlertDialog.TitleText</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/AlertDialog.TitlePanel</item>
        <item name="materialAlertDialogBodyTextStyle">@style/AlertDialog.BodyText</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="AlertDialog.ButtonBar" parent="@style/Widget.AppCompat.ButtonBar.AlertDialog">
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
    </style>

    <style name="AlertDialog.TitleText" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:fontFamily">@font/lato_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/lato_medium</item>
    </style>

    <style name="AlertDialog.TitlePanel" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="AlertDialog.BodyText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="SS.Widget.ActionButton" parent="">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/spacing_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">?listPreferredItemHeightSmall</item>
        <item name="android:paddingBottom">@dimen/spacing_list</item>
        <item name="android:paddingRight">?listPreferredItemPaddingEnd</item>
        <item name="android:paddingStart">?listPreferredItemPaddingStart</item>
        <item name="android:paddingLeft">?listPreferredItemPaddingStart</item>
        <item name="android:paddingTop">@dimen/spacing_list</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline5</item>
    </style>

    <style name="SS.Widget.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryHint">@string/blank</item>
        <item name="searchIcon">@null</item>
    </style>
</resources>
